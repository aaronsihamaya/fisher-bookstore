@page
@using Fisher.Bookstore.Pages
@model Books

@{
    ViewData["Title"] = "Books page";
}

<div class ="row">
    <div class="col-lg-12">
        <h2>Books Currently in Stock</h2>
        <h3>Last updated: @(System.DateTime.Now)</h3>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Author</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.books)
                {
                    <tr>
                        <td><center>@book.Title</center></td>
                        <td><center>@book.Author.Name</center></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>